# Infrastructure Configuration
# Copy this file to .env and fill in your specific values

# Domain Configuration
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# Database Configuration (Global Settings)
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# Server Configuration
SERVER_IP=your_digitalocean_droplet_ip
SSH_USER=root

# Paths
INFRASTRUCTURE_PATH=/opt/wordpress-infrastructure
CLIENTS_PATH=/opt/clients
BACKUPS_PATH=/opt/backups

# Security
# Generate these with: openssl rand -base64 32
WORDPRESS_AUTH_KEY=generate_random_key_here
WORDPRESS_SECURE_AUTH_KEY=generate_random_key_here
WORDPRESS_LOGGED_IN_KEY=generate_random_key_here
WORDPRESS_NONCE_KEY=generate_random_key_here
WORDPRESS_AUTH_SALT=generate_random_salt_here
WORDPRESS_SECURE_AUTH_SALT=generate_random_salt_here
WORDPRESS_LOGGED_IN_SALT=generate_random_salt_here
WORDPRESS_NONCE_SALT=generate_random_salt_here

# Optional: Monitoring and Alerts
NOTIFICATION_EMAIL=alerts@yourdomain.com

# Webhook Configuration
WEBHOOK_PORT=9000
WEBHOOK_SECRET=generate_random_webhook_secret_here

# Client Environment Defaults
DEFAULT_TIMEZONE=America/New_York
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com